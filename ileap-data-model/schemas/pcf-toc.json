{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductFootprint_with_Toc_Extension",
  "description": "Data Type \"ProductFootprint\" of PACT Tech Spec Version 2 with Toc as a DataModelExtension",
  "type": "object",
  "required": [
    "comment",
    "companyIds",
    "companyName",
    "created",
    "id",
    "pcf",
    "productCategoryCpc",
    "productDescription",
    "productIds",
    "productNameCompany",
    "specVersion",
    "status",
    "version"
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/PfId"
    },
    "specVersion": {
      "$ref": "#/definitions/VersionString"
    },
    "precedingPfIds": {
      "anyOf": [
        {
          "$ref": "#/definitions/NonEmptyPfIdVec"
        },
        {
          "type": "null"
        }
      ]
    },
    "version": {
      "$ref": "#/definitions/VersionInteger"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "status": {
      "$ref": "#/definitions/PfStatus"
    },
    "statusComment": {
      "type": [
        "string",
        "null"
      ]
    },
    "validityPeriodStart": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "validityPeriodEnd": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "companyName": {
      "$ref": "#/definitions/NonEmptyString"
    },
    "companyIds": {
      "$ref": "#/definitions/CompanyIdSet"
    },
    "productDescription": {
      "type": "string"
    },
    "productIds": {
      "$ref": "#/definitions/ProductIdSet"
    },
    "productCategoryCpc": {
      "$ref": "#/definitions/NonEmptyString"
    },
    "productNameCompany": {
      "$ref": "#/definitions/NonEmptyString"
    },
    "comment": {
      "type": "string"
    },
    "pcf": {
      "$ref": "#/definitions/CarbonFootprint"
    },
    "extensions": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/definitions/DataModelExtension"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "TOC": {
      "type": "object",
      "required": [
        "co2eIntensityTTW",
        "co2eIntensityThroughput",
        "co2eIntensityWTW",
        "energyCarriers",
        "isAccredited",
        "isVerified",
        "mode",
        "tocId"
      ],
      "properties": {
        "tocId": {
          "type": "string"
        },
        "isVerified": {
          "type": "boolean"
        },
        "isAccredited": {
          "type": "boolean"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "mode": {
          "$ref": "#/definitions/TransportMode"
        },
        "loadFactor": {
          "type": [
            "string",
            "null"
          ]
        },
        "emptyDistanceFactor": {
          "type": [
            "string",
            "null"
          ]
        },
        "temperatureControl": {
          "anyOf": [
            {
              "$ref": "#/definitions/TemperatureControl"
            },
            {
              "type": "null"
            }
          ]
        },
        "truckLoadingSequence": {
          "anyOf": [
            {
              "$ref": "#/definitions/TruckLoadingSequence"
            },
            {
              "type": "null"
            }
          ]
        },
        "airShippingOption": {
          "anyOf": [
            {
              "$ref": "#/definitions/AirShippingOption"
            },
            {
              "type": "null"
            }
          ]
        },
        "flightLength": {
          "anyOf": [
            {
              "$ref": "#/definitions/FlightLength"
            },
            {
              "type": "null"
            }
          ]
        },
        "energyCarriers": {
          "$ref": "#/definitions/NonEmptyVec_for_EnergyCarrier"
        },
        "co2eIntensityWTW": {
          "$ref": "#/definitions/Decimal"
        },
        "co2eIntensityTTW": {
          "$ref": "#/definitions/Decimal"
        },
        "co2eIntensityThroughput": {
          "$ref": "#/definitions/TocCo2eIntensityThroughput"
        },
        "glecDataQualityIndex": {
          "anyOf": [
            {
              "$ref": "#/definitions/GlecDataQualityIndex"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "TransportMode": {
      "type": "string",
      "enum": [
        "Road",
        "Rail",
        "Air",
        "Sea",
        "InlandWaterway"
      ]
    },
    "TemperatureControl": {
      "type": "string",
      "enum": [
        "ambient",
        "refrigerated",
        "mixed"
      ]
    },
    "TruckLoadingSequence": {
      "type": "string",
      "enum": [
        "LTL",
        "FTL"
      ]
    },
    "AirShippingOption": {
      "type": "string",
      "enum": [
        "belly freight",
        "freighter"
      ]
    },
    "FlightLength": {
      "type": "string",
      "enum": [
        "short-haul",
        "long-haul"
      ]
    },
    "NonEmptyVec_for_EnergyCarrier": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EnergyCarrier"
      }
    },
    "EnergyCarrier": {
      "type": "object",
      "required": [
        "emissionFactorTTW",
        "emissionFactorWTW",
        "energyCarrier"
      ],
      "properties": {
        "energyCarrier": {
          "$ref": "#/definitions/EnergyCarrierType"
        },
        "feedstocks": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Feedstock"
          }
        },
        "energyConsumption": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "energyConsumptionUnit": {
          "anyOf": [
            {
              "$ref": "#/definitions/EnergyConsumptionUnit"
            },
            {
              "type": "null"
            }
          ]
        },
        "emissionFactorWTW": {
          "$ref": "#/definitions/Decimal"
        },
        "emissionFactorTTW": {
          "$ref": "#/definitions/Decimal"
        }
      }
    },
    "EnergyCarrierType": {
      "type": "string",
      "enum": [
        "Diesel",
        "HVO",
        "Petrol",
        "CNG",
        "LNG",
        "LPG",
        "HFO",
        "MGO",
        "Aviation fuel",
        "Hydrogen",
        "Methanol",
        "Electric"
      ]
    },
    "Feedstock": {
      "type": "object",
      "required": [
        "feedstock"
      ],
      "properties": {
        "feedstock": {
          "$ref": "#/definitions/FeedstockType"
        },
        "feedstockPercentage": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "regionProvenance": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "FeedstockType": {
      "type": "string",
      "enum": [
        "Fossil",
        "Natural gas",
        "Grid",
        "Renewable electricity",
        "Cooking oil"
      ]
    },
    "Decimal": {
      "type": "string",
      "pattern": "^-?\\d+(\\.\\d+)?$"
    },
    "EnergyConsumptionUnit": {
      "type": "string",
      "enum": [
        "l",
        "kg",
        "kWh",
        "MJ"
      ]
    },
    "TocCo2eIntensityThroughput": {
      "type": "string",
      "enum": [
        "TEUkm",
        "tkm"
      ]
    },
    "GlecDataQualityIndex": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0.0
    },
    "PfId": {
      "type": "string",
      "format": "uuid"
    },
    "VersionString": {
      "type": "string",
      "minLength": 5,
      "pattern": "^\\d+\\.\\d+\\.\\d+(-\\d{8})?$"
    },
    "NonEmptyPfIdVec": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "VersionInteger": {
      "type": "integer",
      "format": "int32",
      "maximum": 2147483647.0,
      "minimum": 0.0
    },
    "PfStatus": {
      "type": "string",
      "enum": [
        "Active",
        "Deprecated"
      ]
    },
    "NonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "CompanyIdSet": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([uU][rR][nN]):"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "GenericURN": {
      "type": "string",
      "pattern": "^([uU][rR][nN]):"
    },
    "ProductIdSet": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([uU][rR][nN]):"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "CarbonFootprint": {
      "description": "Data Type \"CarbonFootprint\" of Spec Version 2",
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "geographyRegionOrSubregion"
          ],
          "properties": {
            "geographyRegionOrSubregion": {
              "$ref": "#/definitions/UNRegionOrSubregion"
            },
            "geographyCountry": false,
            "geographyCountrySubdivision": false
          }
        },
        {
          "type": "object",
          "required": [
            "geographyCountry"
          ],
          "properties": {
            "geographyCountry": {
              "$ref": "#/definitions/ISO3166CC"
            },
            "geographyRegionOrSubregion": false,
            "geographyCountrySubdivision": false
          }
        },
        {
          "type": "object",
          "required": [
            "geographyCountrySubdivision"
          ],
          "properties": {
            "geographyCountrySubdivision": {
              "$ref": "#/definitions/NonEmptyString"
            },
            "geographyRegionOrSubregion": false,
            "geographyCountry": false
          }
        },
        {
          "type": "object",
          "properties": {
            "geographyRegionOrSubregion": false,
            "geographyCountry": false,
            "geographyCountrySubdivision": false
          }
        }
      ]
    },
    "UNRegionOrSubregion": {
      "description": "List of UN regions and subregions",
      "type": "string",
      "enum": [
        "Africa",
        "Americas",
        "Asia",
        "Europe",
        "Oceania",
        "Australia and New Zealand",
        "Central Asia",
        "Eastern Asia",
        "Eastern Europe",
        "Latin America and the Caribbean",
        "Melanesia",
        "Micronesia",
        "Northern Africa",
        "Northern America",
        "Northern Europe",
        "Polynesia",
        "South-eastern Asia",
        "Southern Asia",
        "Southern Europe",
        "Sub-Saharan Africa",
        "Western Asia",
        "Western Europe"
      ]
    },
    "ISO3166CC": {
      "type": "string"
    },
    "DataModelExtension": {
      "type": "object",
      "required": [
        "data",
        "dataSchema",
        "specVersion"
      ],
      "properties": {
        "dataSchema": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "specVersion": {
          "$ref": "#/definitions/VersionString"
        },
        "data": {
          "$ref": "#/definitions/Toc"
        }
      }
    }
  }
}
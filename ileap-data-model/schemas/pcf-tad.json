{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProductFootprint_with_Tad_Extension",
  "description": "Data Type \"ProductFootprint\" of PACT Tech Spec Version 2 with Tad as a DataModelExtension",
  "type": "object",
  "required": [
    "comment",
    "companyIds",
    "companyName",
    "created",
    "id",
    "pcf",
    "productCategoryCpc",
    "productDescription",
    "productIds",
    "productNameCompany",
    "specVersion",
    "status",
    "version"
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/PfId"
    },
    "specVersion": {
      "$ref": "#/definitions/VersionString"
    },
    "precedingPfIds": {
      "anyOf": [
        {
          "$ref": "#/definitions/NonEmptyPfIdVec"
        },
        {
          "type": "null"
        }
      ]
    },
    "version": {
      "$ref": "#/definitions/VersionInteger"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "updated": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "status": {
      "$ref": "#/definitions/PfStatus"
    },
    "statusComment": {
      "type": [
        "string",
        "null"
      ]
    },
    "validityPeriodStart": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "validityPeriodEnd": {
      "type": [
        "string",
        "null"
      ],
      "format": "date-time"
    },
    "companyName": {
      "$ref": "#/definitions/NonEmptyString"
    },
    "companyIds": {
      "$ref": "#/definitions/CompanyIdSet"
    },
    "productDescription": {
      "type": "string"
    },
    "productIds": {
      "$ref": "#/definitions/ProductIdSet"
    },
    "productCategoryCpc": {
      "$ref": "#/definitions/NonEmptyString"
    },
    "productNameCompany": {
      "$ref": "#/definitions/NonEmptyString"
    },
    "comment": {
      "type": "string"
    },
    "pcf": {
      "$ref": "#/definitions/CarbonFootprint"
    },
    "extensions": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/definitions/DataModelExtension"
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "TAD": {
      "description": "Data Type \"Transport Activity Data\" of the iLEAP Technical Specifications",
      "type": "object",
      "required": [
        "activityId",
        "consignmentIds",
        "destination",
        "distance",
        "origin"
      ],
      "properties": {
        "activityId": {
          "type": "string"
        },
        "consignmentIds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "distance": {
          "$ref": "#/definitions/GlecDistance"
        },
        "mass": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "loadFactor": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "emptyDistanceFactor": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "origin": {
          "$ref": "#/definitions/Location"
        },
        "destination": {
          "$ref": "#/definitions/Location"
        },
        "departureAt": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "arrivalAt": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "mode": {
          "anyOf": [
            {
              "$ref": "#/definitions/TransportMode"
            },
            {
              "type": "null"
            }
          ]
        },
        "packagingOrTrEqType": {
          "anyOf": [
            {
              "$ref": "#/definitions/PackagingOrTrEqType"
            },
            {
              "type": "null"
            }
          ]
        },
        "packagingOrTrEqAmount": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint",
          "minimum": 0.0
        },
        "feedstocks": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/Feedstock"
          }
        }
      }
    },
    "GlecDistance": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "actual"
          ],
          "properties": {
            "actual": {
              "$ref": "#/definitions/Decimal"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "gcd"
          ],
          "properties": {
            "gcd": {
              "$ref": "#/definitions/Decimal"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "sfd"
          ],
          "properties": {
            "sfd": {
              "$ref": "#/definitions/Decimal"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "Decimal": {
      "type": "string",
      "pattern": "^-?\\d+(\\.\\d+)?$"
    },
    "Location": {
      "type": "object",
      "required": [
        "city",
        "country"
      ],
      "properties": {
        "street": {
          "type": [
            "string",
            "null"
          ]
        },
        "zip": {
          "type": [
            "string",
            "null"
          ]
        },
        "city": {
          "type": "string"
        },
        "country": {
          "$ref": "#/definitions/GeographicScope"
        },
        "iata": {
          "anyOf": [
            {
              "$ref": "#/definitions/IataCode"
            },
            {
              "type": "null"
            }
          ]
        },
        "locode": {
          "anyOf": [
            {
              "$ref": "#/definitions/Locode"
            },
            {
              "type": "null"
            }
          ]
        },
        "uic": {
          "anyOf": [
            {
              "$ref": "#/definitions/UicCode"
            },
            {
              "type": "null"
            }
          ]
        },
        "lat": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "lng": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "GeographicScope": {
      "description": "Encoded geographic scope rules of a Spec Version 2 `CarbonFootprint`",
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "required": [
            "geographyRegionOrSubregion"
          ],
          "properties": {
            "geographyRegionOrSubregion": {
              "$ref": "#/definitions/UNRegionOrSubregion"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "geographyCountry"
          ],
          "properties": {
            "geographyCountry": {
              "$ref": "#/definitions/ISO3166CC"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "geographyCountrySubdivision"
          ],
          "properties": {
            "geographyCountrySubdivision": {
              "$ref": "#/definitions/NonEmptyString"
            }
          }
        }
      ]
    },
    "UNRegionOrSubregion": {
      "description": "List of UN regions and subregions",
      "type": "string",
      "enum": [
        "Africa",
        "Americas",
        "Asia",
        "Europe",
        "Oceania",
        "Australia and New Zealand",
        "Central Asia",
        "Eastern Asia",
        "Eastern Europe",
        "Latin America and the Caribbean",
        "Melanesia",
        "Micronesia",
        "Northern Africa",
        "Northern America",
        "Northern Europe",
        "Polynesia",
        "South-eastern Asia",
        "Southern Asia",
        "Southern Europe",
        "Sub-Saharan Africa",
        "Western Asia",
        "Western Europe"
      ]
    },
    "ISO3166CC": {
      "type": "string"
    },
    "NonEmptyString": {
      "type": "string",
      "minLength": 1
    },
    "IataCode": {
      "type": "string"
    },
    "Locode": {
      "type": "string"
    },
    "UicCode": {
      "type": "string"
    },
    "TransportMode": {
      "type": "string",
      "enum": [
        "Road",
        "Rail",
        "Air",
        "Sea",
        "InlandWaterway"
      ]
    },
    "PackagingOrTrEqType": {
      "type": "string",
      "enum": [
        "Box",
        "Pallet",
        "Container"
      ]
    },
    "Feedstock": {
      "type": "object",
      "required": [
        "feedstock"
      ],
      "properties": {
        "feedstock": {
          "$ref": "#/definitions/FeedstockType"
        },
        "feedstockPercentage": {
          "anyOf": [
            {
              "$ref": "#/definitions/Decimal"
            },
            {
              "type": "null"
            }
          ]
        },
        "regionProvenance": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "FeedstockType": {
      "type": "string",
      "enum": [
        "Fossil",
        "Natural gas",
        "Grid",
        "Renewable electricity",
        "Cooking oil"
      ]
    },
    "PfId": {
      "type": "string",
      "format": "uuid"
    },
    "VersionString": {
      "type": "string",
      "minLength": 5,
      "pattern": "^\\d+\\.\\d+\\.\\d+(-\\d{8})?$"
    },
    "NonEmptyPfIdVec": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "VersionInteger": {
      "type": "integer",
      "format": "int32",
      "maximum": 2147483647.0,
      "minimum": 0.0
    },
    "PfStatus": {
      "type": "string",
      "enum": [
        "Active",
        "Deprecated"
      ]
    },
    "CompanyIdSet": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([uU][rR][nN]):"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "GenericURN": {
      "type": "string",
      "pattern": "^([uU][rR][nN]):"
    },
    "ProductIdSet": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([uU][rR][nN]):"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "CarbonFootprint": {
      "description": "Data Type \"CarbonFootprint\" of Spec Version 2",
      "type": "object",
      "oneOf": [
        {
          "type": "object",
          "required": [
            "geographyRegionOrSubregion"
          ],
          "properties": {
            "geographyRegionOrSubregion": {
              "$ref": "#/definitions/UNRegionOrSubregion"
            },
            "geographyCountry": false,
            "geographyCountrySubdivision": false
          }
        },
        {
          "type": "object",
          "required": [
            "geographyCountry"
          ],
          "properties": {
            "geographyCountry": {
              "$ref": "#/definitions/ISO3166CC"
            },
            "geographyRegionOrSubregion": false,
            "geographyCountrySubdivision": false
          }
        },
        {
          "type": "object",
          "required": [
            "geographyCountrySubdivision"
          ],
          "properties": {
            "geographyCountrySubdivision": {
              "$ref": "#/definitions/NonEmptyString"
            },
            "geographyRegionOrSubregion": false,
            "geographyCountry": false
          }
        },
        {
          "type": "object",
          "properties": {
            "geographyRegionOrSubregion": false,
            "geographyCountry": false,
            "geographyCountrySubdivision": false
          }
        }
      ]
    },
    "DataModelExtension": {
      "type": "object",
      "required": [
        "data",
        "dataSchema",
        "specVersion"
      ],
      "properties": {
        "dataSchema": {
          "type": "string"
        },
        "documentation": {
          "type": "string"
        },
        "specVersion": {
          "$ref": "#/definitions/VersionString"
        },
        "data": {
          "$ref": "#/definitions/Tad"
        }
      }
    }
  }
}